{{> message}}

<div style="margin-left: 25%; margin-right: 25%">
    <h1>Login</h1>
    <form action="/login" method="post">
    <div class="form-group">
        <label for="username">Email address</label>
        <input name="username" type="email" class="form-control" id="username" placeholder="Enter email">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input name="password" type="password" class="form-control" id="password" placeholder="Enter password">
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Login</button>
    </form>
    <p>Don't have an account? <a class="nav-link" href="/register" style="text-decoration: underline blue; color:blue;">Register</a></p>
</div>